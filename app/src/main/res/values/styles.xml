<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
        <item name="materialButtonStyle">@style/Button.Default</item>
    </style>

    <style name="DrawerHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#fff</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="default_actionbar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="titleTextColor">#fff</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_white</item>
    </style>

    <style name="TextInputLayout.Default" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/textFieldFont</item>
        <item name="boxCornerRadiusTopStart">@dimen/radiusComponents</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radiusComponents</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radiusComponents</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radiusComponents</item>
        <item name="boxStrokeColor">@color/text_input_state_list</item>
        <item name="hintTextColor">@color/text_input_state_list</item>
        <item name="android:textColorHint">@color/text_input_state_list</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="progressBar_base" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_height">10dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="progressBar_base.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="progressBar" parent="progressBar_base">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name="progressBar.Horizontal" parent="progressBar_base.Horizontal">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>

    <style name="headerFields">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AutoCompleteTextView.Default" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:completionThreshold">1</item>
    </style>

    <style name="InputLayout.Default.ExposedDropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">18sp</item>
        <item name="boxCornerRadiusTopStart">@dimen/radiusComponents</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radiusComponents</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radiusComponents</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radiusComponents</item>
        <item name="boxStrokeColor">@color/text_input_state_list</item>
        <item name="android:textColorHint">@color/text_input_state_list</item>
        <item name="hintTextColor">@color/text_input_state_list</item>
        <item name="endIconDrawable">@drawable/ic_arrow_down_black</item>
    </style>

    <style name="Button.Default" parent="Widget.MaterialComponents.Button">
        <item name="android:height">60dp</item>
    </style>

    <style name="BottomSheetStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
